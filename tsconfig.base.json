{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@codeabien/bootcamps": [
        "libs/bootcamps/feature-playground/src/index.ts"
      ],
      "@codeabien/components": ["libs/components/src/index.ts"],
      "@codeabien/courses-ui": ["libs/courses/ui/src/index.ts"],
      "@codeabien/data-access": ["libs/bootcamps/data-access/src/index.ts"],
      "@codeabien/playground": [
        "libs/bootcamps/feature-playground/src/index.ts"
      ],
      "@codeabien/store": ["libs/store/src/index.ts"],
      "@codeabien/todos": ["libs/bootcamps/feature-todos/src/index.ts"],
      "@codeabien/ui": ["libs/bootcamps/ui/src/index.ts"],
      "@codeabien/videoplayer": [
        "libs/courses/feature-videoplayer/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
